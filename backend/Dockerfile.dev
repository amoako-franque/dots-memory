# Development Dockerfile for Backend
# Optimized for hot-reload and fast iteration
FROM node:18-alpine

WORKDIR /app

# Install development dependencies
RUN apk add --no-cache \
    git \
    python3 \
    make \
    g++

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install all dependencies (including dev dependencies)
RUN npm ci

# Generate Prisma Client
RUN npx prisma generate

# Copy source code (will be mounted as volume in docker-compose)
COPY . .

# Create directories for uploads and logs
RUN mkdir -p /app/uploads /app/logs && \
    chown -R node:node /app

# Switch to non-root user for security
USER node

EXPOSE 30700

ENV NODE_ENV=development
ENV PORT=30700

# Health check for development
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD node -e "require('http').get('http://localhost:30700/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Use ts-node-dev for hot-reload
CMD ["npm", "run", "dev"]

